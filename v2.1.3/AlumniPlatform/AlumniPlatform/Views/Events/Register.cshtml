



@model AlumniPlatform.Models.Event

@{
    ViewBag.Title = "报名参加 - " + Model.Title;
}

<h2>报名参加 @Model.Title</h2>

<div class="registration-form">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("eventId", Model.Id)

        <div class="form-group">
            <label>姓名</label>
            <input type="text" name="name" class="form-control" required>
        </div>

        <div class="form-group">
            <label>电子邮箱</label>
            <input type="email" name="email" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-primary">提交报名</button>
    }
</div>

<a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-default">
    返回活动详情
</a>