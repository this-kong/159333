@model IEnumerable<AlumniPlatform.Models.Event>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>校友社交平台 - 活动</title>


    <link href="~/Content/events-style.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/events-script.js"></script>
</head>
<body>
    <!-- 顶部横幅区域 -->
    <div class="banner">
        <div class="container">
            <div class="banner-content text-center">
                <h1 class="platform-name"><i class="fas fa-graduation-cap me-2"></i>校友社交平台</h1>
                <p class="platform-tagline">连接校友，共创未来</p>

                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <h2 class="mb-4">活动与聚会</h2>
                        <p class="lead mb-4">加入我们的活动，扩展人脉网络，分享知识与经验，共同成长</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- 活动类型选择器 -->
        <div class="event-selector">
            <div class="d-flex flex-wrap justify-content-center gap-2">
                <button class="event-type-btn active" data-type="all">
                    <i class="fas fa-calendar-alt"></i> 所有活动
                </button>
                <button class="event-type-btn" data-type="meetup">
                    <i class="fas fa-users"></i> 校友聚会
                </button>
                <button class="event-type-btn" data-type="social">
                    <i class="fas fa-glass-cheers"></i> 社交活动
                </button>
                <button class="event-type-btn" data-type="workshop">
                    <i class="fas fa-chalkboard-teacher"></i> 工作坊
                </button>
            </div>
        </div>

        <!-- 发布活动区域 -->
        <div class="create-event-section">
            <h3 class="mb-3">组织你的专属活动</h3>
            <p class="text-muted mb-4">无论你是想组织校友聚会、专业研讨会还是社交活动，我们都能帮你实现</p>
            <a href="@Url.Action("Create")" class="btn-create-event">
                <i class="fas fa-plus-circle me-1"></i> 发布新活动
            </a>
        </div>

        <!-- 活动列表 -->
        <div class="row" id="events-container">
            <!-- 活动卡片将通过JavaScript动态生成 -->
        </div>
    </div>

    <!-- 页脚 -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <h5 class="footer-title">关于校友社交平台</h5>
                    <p>连接校友，共创未来。为校友和学生提供专业的交流平台，促进职业发展和知识共享。</p>
                    <div class="social-icons">
                        <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-4 mb-4 mb-md-0">
                    <h5 class="footer-title">快速链接</h5>
                    <div class="footer-links">
                        <a href="#">首页</a>
                        <a href="#">活动</a>
                        <a href="#">校友名录</a>
                        <a href="#">职位发布</a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-4 mb-4 mb-md-0">
                    <h5 class="footer-title">资源</h5>
                    <div class="footer-links">
                        <a href="#">常见问题</a>
                        <a href="#">帮助中心</a>
                        <a href="#">活动指南</a>
                        <a href="#">联系我们</a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4">
                    <h5 class="footer-title">联系我们</h5>
                    <div class="footer-links">
                        <p><i class="fas fa-map-marker-alt me-2"></i> 大学路123号</p>
                        <p><i class="fas fa-phone me-2"></i> 456-7890</p>
                        <p><i class="fas fa-envelope me-2"></i> alumni@u</p>
                    </div>
                </div>
            </div>
            <div class="copyright">
                <p>&copy; 2025 校友社交平台. 保留所有权利.</p>
            </div>
        </div>
    </footer>

    <script src="events-script.js"></script>
</body>
</html>