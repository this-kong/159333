@model AlumniPlatform.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "忘记了密码?";
    Layout = null; // 使用独立布局，避免继承其他样式干扰
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 校友交流平台</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/Content/forget-password-style.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="forgot-password-container">
        <div class="forgot-password-card">
            <div class="forgot-password-header">
                <h2><i class="fas fa-graduation-cap me-2"></i>校友社交平台</h2>
                <p>连接校友，共创未来</p>
            </div>

            <div class="forgot-password-form">
                <h3 class="forgot-password-title">重置密码</h3>

                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <!-- 显示验证错误摘要 -->
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="input-container">
                        <div class="input-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        @Html.TextBoxFor(m => m.Email, new
                        {
                            @class = "form-control input-with-icon",
                            placeholder = "请输入您的电子邮箱"
                        })
                    </div>

                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                    <button type="submit" class="btn-submit">发送重置链接</button>

                    <div class="forgot-password-footer">
                        <p>记起密码了？@Html.ActionLink("返回登录", "Login", null, new { @class = "text-link" })</p>
                    </div>
                }
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>